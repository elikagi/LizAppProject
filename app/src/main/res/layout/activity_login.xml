<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Edt_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/design_default_color_secondary_variant"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/Edt_Login"
        android:layout_width="418dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="YOUR ACCOUNT"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <EditText
        android:id="@+id/Edt_Attorney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Case file No"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/Edt_EmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Email Address"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Edt_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Password"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/Btn_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="40sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/material_dynamic_neutral0"/>

    <TextView
        android:id="@+id/Edt_tvRedirecttologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do not have an account?Click to Register"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"/>


</LinearLayout>